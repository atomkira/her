{
  "name": "Study Tracker",
  "short_name": "StudyTracker",
  "description": "A beautiful and intuitive study tracking app with smart notifications",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#1e293b",
  "theme_color": "#e11d48",
  "orientation": "portrait-primary",
  "categories": ["productivity", "education", "lifestyle"],
  "lang": "en",
  "icons": [
    {
      "src": "/favicon.svg",
      "sizes": "64x64 32x32 24x24 16x16",
      "type": "image/svg+xml"
    },
    {
      "src": "/manifest-icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/manifest-icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "permissions": [
    "notifications"
  ],
  "features": [
    "Cross Platform",
    "fast",
    "simple"
  ]
}
